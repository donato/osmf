<traitforms:TraitDisplayForm
	xmlns:mx			="http://www.adobe.com/2006/mxml"
	xmlns:traitforms	="org.openvideoplayer.view.traitforms.*"
	>
	
	<mx:FormHeading
		id				="formHeading"
		/>
		
	<mx:FormItem
		id				="volumeFormItem"
		label			="Volume"
		width			="100%"
		direction		="horizontal"
		visible			="false"
		>
		<mx:HSlider 			
			id			="volumeSlider" 
			value		="1"	
			width		="100%"
			maximum		="1"
			liveDragging="true"
			/>
			
		<mx:Label
			id			="volumeValue"
			text		="{volumeSlider.value.toFixed(2)}"
			/>
	</mx:FormItem>
	
	<mx:FormItem
		id				="panFormItem"
		label			="Pan"
		width			="100%"
		direction		="horizontal"
		visible			="false"
		>
		<mx:HSlider 			
			id			="panSlider" 
			value		="0"	
			width		="100%"
			minimum		="-1"
			maximum		="1"
			liveDragging="true"
			/>		

		<mx:Label
			id			="panValue"
			text		="{panSlider.value.toFixed(2)}"
			/>
	</mx:FormItem>

	<mx:FormItem
		id				="mutedFormItem"
		label			="Muted"
		width			="100%"
		visible			="false"
		>
		<mx:CheckBox 			
			id			="mutedCheckBox" 
			/>				
	</mx:FormItem>
	
</traitforms:TraitDisplayForm>
