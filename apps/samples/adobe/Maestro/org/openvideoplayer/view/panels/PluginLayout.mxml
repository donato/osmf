<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="400" height="300">
	<mx:Form 
		id				="form" 
		width			="100%" 
		height			="99%" 
		creationPolicy	="all" 
		>
		
		<mx:FormItem 
			label		="Plugin Resource" 
			direction	="horizontal"
			>
			
			<mx:TextInput 
				id		="pluginResource" 
				width	="450" 
				text	="http://flipside/weizhang/strobeplugin/ASPlugin.swf"
				/>
				
			<mx:Button 
				id		="loadPluginButton" 
				label	="Load"
				/>
				
		</mx:FormItem>
		
		<mx:FormItem>
			<mx:TextArea 
				id				="pluginError" 
				borderThickness	="0" 
				backgroundAlpha	="0"
				wordWrap		="true"
				width			="300" 
				height			="60"
				color			="red"
				visible			="false"
				/>

		</mx:FormItem>
		
		<mx:FormItem 
			label				="Plugins Loaded"
			>
			
			<mx:List 
				id				="loadedPluginList"
				width			="300"
				/>
			
		</mx:FormItem>
		
	</mx:Form>

</mx:HBox>
