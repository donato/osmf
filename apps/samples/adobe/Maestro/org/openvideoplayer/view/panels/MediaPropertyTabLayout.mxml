<mx:HBox
	xmlns:mx				="http://www.adobe.com/2006/mxml"
	>
	
	<mx:VBox
		width				="50%"
		height				="100%"
		>
		
		<mx:Form
			width			="100%"
			height			="99%"
			id				="form"
			creationPolicy	="all"
			>
			
			<mx:FormItem 
				label		="MediaInfo:"
				>
				<mx:ComboBox 
					id		="mediaInfoList" width="300"
					/>
			</mx:FormItem>
			
			<mx:FormItem
				label		="MediaElement:"
				>
				<mx:ComboBox
					id		="mediaElementsList"
					width	="180"
					/>
			</mx:FormItem>
	
			<mx:FormItem
				label		="ILoader:"
				>
				<mx:ComboBox
					id		="loadersList"
					width	="180"
					enabled	="false"
					/>
			</mx:FormItem>
	
			<mx:FormItem
				label		="URLResource:"
				>
				<mx:TextInput
					id		="resourceInput"
					width	="450"
					enabled	="false"
					/>
			</mx:FormItem>
	
		</mx:Form>

		<mx:HBox
			width			="100%"
			height			="25"
			horizontalAlign	="right"
			>

			<mx:Button
				id			="addToCompositionButton"
				label		="Add To Composition"
				visible		="false"
				enabled		="false"
				/>
			
			<mx:Button
				id			="createButton"
				label		="Create MediaElement"
				enabled		="false"
				/>
				
		</mx:HBox>
		
	</mx:VBox>
	
	<mx:VRule
		id					="vrule"
		height				="100%"
		visible 			="false"
		/>
	
	<mx:VBox
		id					="treeBox"
		width				="50%"
		height				="100%"
		visible				="false"
		>
		
		<mx:Tree
			id				="tree"
			width			="100%"
			height			="99%"
			>
			
		</mx:Tree>
		
		<mx:HBox
			width			="100%"
			height			="25"
			>
			
			<!-- TODO: Add buttons to add/remove nodes in the tree. -->
				
		</mx:HBox>
		
	</mx:VBox>
	
</mx:HBox>
