package{	import com.adobe.videoperformance.control.VideoRunner;	import com.adobe.videoperformance.events.StageDisplayObjectEvent;	import com.adobe.videoperformance.model.Model;		import flash.events.MouseEvent;	import flash.display.Sprite;	import flash.display.DisplayObject;	import flash.display.StageDisplayState;		public class VideoPerformance extends Sprite	{		// Public Interface		//				public function VideoPerformance() 		{			stage.doubleClickEnabled = true;			stage.addEventListener(MouseEvent.DOUBLE_CLICK,onDoubleClick);						model = new Model();			model.initialize(loaderInfo.parameters);						runner = new VideoRunner(model);			runner.addEventListener(StageDisplayObjectEvent.ADD_CHILD_REQUEST,onAddChildRequest);						if (runner.run() == false)			{				trace("Run failed.");			}		}				// Internals		//				private var model:Model;		private var runner:VideoRunner;				private function onAddChildRequest(event:StageDisplayObjectEvent):void		{			if (contains(event.child) == false)			{				addChild(event.child);			}		}				private function onDoubleClick(event:MouseEvent):void		{			if (stage.displayState == StageDisplayState.FULL_SCREEN)			{				stage.displayState = StageDisplayState.NORMAL;			}			else if (numChildren > 0)			{				var child:DisplayObject = getChildAt(0);								stage.fullScreenSourceRect = child.getBounds(stage);				stage.displayState = StageDisplayState.FULL_SCREEN;			}		}	}	}